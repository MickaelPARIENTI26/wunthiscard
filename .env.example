# ============================================
# App
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_ADMIN_URL=http://localhost:3001

# ============================================
# Database (PostgreSQL)
# ============================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5435/winthiscard

# ============================================
# Redis (Upstash)
# ============================================
REDIS_URL=
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ============================================
# Auth (NextAuth.js v5 / Auth.js)
# ============================================
AUTH_SECRET=  # Generate with: openssl rand -base64 32

# Google OAuth (optional - leave empty to disable Google login)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
NEXT_PUBLIC_GOOGLE_OAUTH_ENABLED=false  # Set to "true" when Google OAuth is configured

# ============================================
# Stripe
# ============================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================
# Email (Resend)
# ============================================
RESEND_API_KEY=re_...
FROM_EMAIL=noreply@winthiscard.com

# ============================================
# Cloudflare Turnstile (CAPTCHA)
# ============================================
NEXT_PUBLIC_TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=

# ============================================
# Storage (Cloudflare R2)
# ============================================
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=winthiscard-images
R2_PUBLIC_URL=

# ============================================
# Sentry (Error Tracking)
# ============================================
SENTRY_DSN=

# ============================================
# Environment
# ============================================
NODE_ENV=development
